<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="input-group">
 <%= form_for @user do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email %><br />


  <%= f.label :first_name %><br />
  <%= f.text_field :first_name %><br />

  <%= f.label :last_name %><br />
  <%= f.text_field :last_name %><br />

  <%= f.label :password %><br />
  <%= f.password_field :password %><br />

  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %><br />

  <%= f.label :zipcode %><br />
  <%= f.text_field :zipcode %><br />

  <%= f.label :phone %><br />
  <%= f.telephone_field :phone %><br />

  <%= label_tag "Have you attended a workshop?" %><br>
  <%= check_box_tag "workshop", value=true, checked=false %>
  <%= label_tag "Yes" %> <br>

  <%= label_tag "Are you registered to vote?" %><br>
  <%= check_box_tag "registered", value=true, checked=false %>
  <%= label_tag "Yes" %> <br>

  <%= f.submit :class=>"btn btn-primary" %>

 <% end %>

</div>
